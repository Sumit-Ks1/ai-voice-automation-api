{
  "agent": {
    "name": "Sarah",
    "voice": "female-en-us-neural",
    "language": "en-US",
    "firstMessage": "Thank you for calling California Dental, this is Sarah. How may I help you today?",
    "silenceTimeout": 5000,
    "maxCallDuration": 600000,
    "interruptible": true
  },
  "tools": [
    {
      "name": "createAppointment",
      "description": "Book a new appointment for a new patient. Use after collecting and confirming: full name, phone number, date (YYYY-MM-DD), time (HH:MM), and reason.",
      "parameters": {
        "type": "object",
        "properties": {
          "full_name": {
            "type": "string",
            "description": "Patient's full name"
          },
          "phone_number": {
            "type": "string",
            "pattern": "^[0-9]{10}$",
            "description": "10-digit phone number without formatting"
          },
          "preferred_date": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
            "description": "Date in YYYY-MM-DD format"
          },
          "preferred_time": {
            "type": "string",
            "pattern": "^[0-9]{2}:[0-9]{2}$",
            "description": "Time in HH:MM 24-hour format"
          },
          "reason_for_visit": {
            "type": "string",
            "description": "Reason for appointment"
          }
        },
        "required": ["full_name", "phone_number", "preferred_date", "preferred_time", "reason_for_visit"]
      },
      "webhookUrl": "{{WEBHOOK_BASE_URL}}/api/v1/webhooks/ultravox/appointment/create"
    },
    {
      "name": "checkAppointment",
      "description": "Look up existing appointments using phone number and name for verification.",
      "parameters": {
        "type": "object",
        "properties": {
          "phone_number": {
            "type": "string",
            "pattern": "^[0-9]{10}$",
            "description": "Phone number used for booking"
          },
          "full_name": {
            "type": "string",
            "description": "Name for verification"
          }
        },
        "required": ["phone_number", "full_name"]
      },
      "webhookUrl": "{{WEBHOOK_BASE_URL}}/api/v1/webhooks/ultravox/appointment/check"
    },
    {
      "name": "editAppointment",
      "description": "Modify an existing appointment's date and/or time.",
      "parameters": {
        "type": "object",
        "properties": {
          "phone_number": {
            "type": "string",
            "pattern": "^[0-9]{10}$",
            "description": "Phone number used for booking"
          },
          "full_name": {
            "type": "string",
            "description": "Name for verification"
          },
          "original_date": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
            "description": "Original appointment date"
          },
          "new_date": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
            "description": "New date (optional if only changing time)"
          },
          "new_time": {
            "type": "string",
            "pattern": "^[0-9]{2}:[0-9]{2}$",
            "description": "New time (optional if only changing date)"
          }
        },
        "required": ["phone_number", "full_name", "original_date"]
      },
      "webhookUrl": "{{WEBHOOK_BASE_URL}}/api/v1/webhooks/ultravox/appointment/edit"
    },
    {
      "name": "cancelAppointment",
      "description": "Cancel an existing appointment. Requires verbal confirmation first.",
      "parameters": {
        "type": "object",
        "properties": {
          "phone_number": {
            "type": "string",
            "pattern": "^[0-9]{10}$",
            "description": "Phone number used for booking"
          },
          "full_name": {
            "type": "string",
            "description": "Name for verification"
          },
          "appointment_date": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
            "description": "Date of appointment to cancel"
          },
          "cancellation_reason": {
            "type": "string",
            "description": "Optional reason for cancellation"
          }
        },
        "required": ["phone_number", "full_name", "appointment_date"]
      },
      "webhookUrl": "{{WEBHOOK_BASE_URL}}/api/v1/webhooks/ultravox/appointment/cancel"
    },
    {
      "name": "transferCall",
      "description": "Transfer to human staff for existing patients, insurance, or complex requests.",
      "parameters": {
        "type": "object",
        "properties": {
          "reason": {
            "type": "string",
            "enum": ["existing_patient", "insurance_question", "billing_question", "complex_request", "caller_request", "error_fallback"],
            "description": "Reason for transfer"
          },
          "notes": {
            "type": "string",
            "description": "Brief notes about what caller needs"
          }
        },
        "required": ["reason"]
      },
      "webhookUrl": "{{WEBHOOK_BASE_URL}}/api/v1/webhooks/ultravox/call/transfer"
    },
    {
      "name": "endCall",
      "description": "End the call politely after completing the interaction.",
      "parameters": {
        "type": "object",
        "properties": {
          "outcome": {
            "type": "string",
            "enum": ["appointment_booked", "appointment_modified", "appointment_cancelled", "information_provided", "transferred", "caller_hangup", "no_action"],
            "description": "The outcome of the call"
          },
          "summary": {
            "type": "string",
            "description": "Brief summary of what was accomplished"
          }
        },
        "required": ["outcome"]
      },
      "webhookUrl": "{{WEBHOOK_BASE_URL}}/api/v1/webhooks/ultravox/call/end"
    }
  ],
  "businessHours": {
    "timezone": "America/Los_Angeles",
    "schedule": {
      "monday": { "open": "09:00", "close": "18:00" },
      "tuesday": { "open": "09:00", "close": "19:00" },
      "wednesday": { "open": "09:00", "close": "18:00" },
      "thursday": { "open": "09:00", "close": "19:00" },
      "friday": null,
      "saturday": { "open": "09:00", "close": "14:00" },
      "sunday": null
    }
  },
  "appointmentSettings": {
    "defaultDurationMinutes": 30,
    "bufferMinutes": 10,
    "maxAdvanceBookingDays": 90,
    "minAdvanceBookingHours": 2
  }
}
